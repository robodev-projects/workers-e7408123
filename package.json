{
  "name": "orion-api",
  "description": "Povio Orion Nest.js Framework",
  "private": true,
  "version": "4.0.0",
  "license": "UNLICENSED",
  "scripts": {
    "setup": "yarn exec scripts/execute.sh local-setup",
    "build": "yarn exec scripts/execute.sh build",
    "bootstrap": "yarn exec scripts/execute.sh bootstrap",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,test}/**/*.ts\"",
    "lint:fix": "eslint \"{src,test}/**/*.ts\" --fix",
    "test": "yarn exec scripts/execute.sh test",
    "test:watch": "yarn vitest -w --coverage",
    "test:unit": "yarn vitest **/*.unit.ts",
    "test:e2e": "yarn vitest **/*.e2e.ts",
    "scaffold": "yarn exec scripts/execute.sh scaffold",
    "docs": "yarn exec scripts/execute.sh docs",
    "openapi:build": "nest start --config src/common/http/openapi/openapi.tsc.nest-cli.json",
    "prisma:generate": "yarn prisma generate --no-hints --allow-no-models",
    "prisma:bootstrap": "yarn exec scripts/bootstrap.d/30_prisma.sh",
    "prisma:migrate:dev": "yarn prisma:bootstrap && yarn prisma migrate dev"
  },
  "dependencies": {
    "@nestjs/common": "^10.4.6",
    "@nestjs/core": "^10.4.6",
    "@nestjs/platform-express": "^10.4.6",
    "@nestjs/swagger": "^8.0.1",
    "@prisma/client": "^5.21.1",
    "@prisma/internals": "^5.21.1",
    "chalk": "^4.1.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "cosmiconfig": "^9.0.0",
    "express": "^4.21.1",
    "jsonwebtoken": "^9.0.2",
    "luxon": "^3.5.0",
    "mime-types": "^2.1.35",
    "nestjs-form-data": "^1.9.91",
    "reflect-metadata": "^0.2.2",
    "request-ip": "^3.3.0",
    "rxjs": "^7.8.1",
    "short-uuid": "^5.2.0",
    "tsx": "^4.19.2",
    "yaml": "^2.6.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.4.7",
    "@nestjs/testing": "^10.4.6",
    "@swc/core": "^1.8.0",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/luxon": "^3.4.2",
    "@types/mime-types": "^2.1.4",
    "@types/node": "^22.9.0",
    "@types/request-ip": "^0.0.41",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "@vitest/coverage-v8": "^2.1.4",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import-helpers": "^1.3.1",
    "eslint-plugin-prettier": "^5.2.1",
    "nock": "^13.5.5",
    "prettier": "^3.3.3",
    "prisma": "^5.21.1",
    "supertest": "^7.0.0",
    "typescript": "^5.6.3",
    "unplugin-swc": "^1.5.1",
    "vite-tsconfig-paths": "^5.1.0",
    "vitest": "^2.1.4"
  },
  "packageManager": "yarn@4.5.1",
  "prisma": {
    "schema": "resources/prisma/schema.prisma"
  },
  "workspaces": [
    "packages/*"
  ]
}
